# function password_check()
# Input string
# Returns boolean:
# - True: valid password according to rules
# - False: not valid password

# String is valid password if meets ALL conditions:
# - At least 8 characters long.
# - Contains at least one character from each of the following categories: 
# - - capital letters
# - - lower-case letters,
# - - numbers
# - - punctuation: !@#$%&()-_[]{};':",./<>?
# - May not contain any characters that do not fit into the four categories above. 
# - This includes any punctuation marks not listed above, spaces, and any other character.


def password_check(password):
        
    has_upper = False
    has_lower = False
    has_punctuation = False
    has_number = False
    
    punctuation = "!@#$%&()-_[]{};':,./<>?"
    punctuation += '"'
    
    #print(punctuation)
    
    # length < 8
    if len(password) < 8:
        return False # not long enough -> fails test

    
    for char in password:
        if char.isupper(): # capital
            has_upper = True
        elif char.islower(): # lower case
            has_lower = True
        elif char in punctuation:
            has_punctuation = True # punctuation
        elif char.isdigit(): # number
            has_number = True
        else:
            return False # invalid character
    
    if not has_upper or not has_lower or not has_number or not has_punctuation:
        return False # upper or lower case missing -> fails test
    
   
    return True


# True
# True
# False
# False
# False
# False

print(password_check("tHIs1sag00d.p4ssw0rd."))
print(password_check("3@t7ENZ((T"))
print(password_check("2.shOrt"))
print(password_check("all.l0wer.case"))
print(password_check("inv4l1d CH4R4CTERS~"))
print(password_check("j)f}Y&Et(bZ)]"))
