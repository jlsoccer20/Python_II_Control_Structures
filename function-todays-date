# returns today's date as a string, in the form year/month/day.
# For example, if today is January 15th, 2017, then it would return 2017/1/15.

from datetime import date

def get_todays_date():
    year = str(date.today().year)
    month = str(date.today().month)
    day = str(date.today().day)
    return year + "/" + month + "/" + day 

print(get_todays_date())
